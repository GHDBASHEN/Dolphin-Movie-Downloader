{
  "name": "dolphin-movie-downloader",
  "version": "1.0.8",
  "repository": "https://github.com/GHDBASHEN/Dolphin-Movie-Downloader",
  "description": "Free Desktop Movie Downloader",
  "main": "src/main.js",
  "author": "Ghdb Ashen",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.moviedownloader.app",
     "publish": [
      {
        "provider": "github",
        "owner": "GHDBASHEN",
        "repo": "Dolphin-Movie-Downloader"
      }
    ],
    "productName": "Dolphin Movie Downloader",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "publish": [ "github" ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": ["AppImage"], 
      "icon": "icon.png",
      "category": "Video"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "icon.icns",
      "category": "public.app-category.entertainment"
    },
    "dmg": {
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "torrent-search-api": "^2.1.4",
    "webtorrent": "1.9.7"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^24.13.3"
  }
}
